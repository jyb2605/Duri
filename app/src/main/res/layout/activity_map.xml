<?xml version="1.0" encoding="utf-8"?><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:app="http://schemas.android.com/apk/res-auto"    xmlns:tools="http://schemas.android.com/tools"    android:id="@+id/activity_main"    android:layout_width="match_parent"    android:layout_height="match_parent"    tools:context=".RecordActivity"    android:orientation="vertical"    >    <LinearLayout        android:layout_weight="0.1"        android:id="@+id/imageView"        android:layout_width="match_parent"        android:layout_height="0px"        android:orientation="horizontal">        <TextView            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:layout_gravity="center"            android:layout_marginLeft="130dp"            android:text="몽이랑 아침산책"            android:textSize="14.5dp"            />        <Button            android:id="@+id/btn_map_history"            android:layout_width="20dp"            android:background="@drawable/btn_settings_selector"            android:textSize="20sp"            android:layout_height="20dp"            android:layout_gravity="center"            android:layout_marginLeft="100dp"            />    </LinearLayout>    <fragment        android:layout_weight="0.59"        android:id="@+id/fragment"        android:name="durithon.duri.MapFragment"        android:layout_width="match_parent"        android:layout_height="0px"/>    <LinearLayout        android:layout_weight="0.36"        android:layout_width="match_parent"        android:layout_height="0px"        android:orientation="horizontal"        android:id="@+id/linearLayout">        <LinearLayout            android:layout_width="0px"            android:layout_height="match_parent"            android:layout_weight="1"            android:gravity="center"            android:orientation="vertical">            <ImageView                android:id="@+id/imageView3"                android:background="@drawable/img_walk"                android:layout_width="70dp"                android:layout_height="84dp" />            <TextView                android:layout_marginTop="5dp"                android:id="@+id/textView"                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:layout_gravity="center"                android:textSize="20sp"                android:text="3,294" />            <TextView                android:layout_marginTop="5dp"                android:id="@+id/textView2"                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:layout_gravity="center"                android:textSize="17sp"                android:text="걸음수" />        </LinearLayout>        <LinearLayout            android:layout_width="0px"            android:layout_height="match_parent"            android:layout_weight="1"            android:gravity="center"            android:orientation="vertical">            <ImageView                android:id="@+id/fasggdfg"                android:background="@drawable/img_heart"                android:layout_width="70dp"                android:layout_height="84dp" />            <TextView                android:layout_marginTop="5dp"                android:id="@+id/asdasfasfgdf"                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:layout_gravity="center"                android:textSize="20sp"                android:text="127" />            <TextView                android:layout_marginTop="5dp"                android:id="@+id/asdasd"                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:layout_gravity="center"                android:textSize="17sp"                android:text="심박수" />        </LinearLayout>    </LinearLayout>    <RelativeLayout        android:id="@+id/music_cnt"        android:layout_width="fill_parent"        android:layout_height="50dp"        android:layout_alignParentBottom="true"        android:background="#81b530"        >        <TextView            android:id="@+id/musicname_txt"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:layout_marginTop="15dp"            android:layout_marginLeft="30dp"            android:layout_alignParentLeft="true"            android:text="노래제목이다"            android:textColor="#FFFFFF"/>        <Button            android:id="@+id/onoff_btn"            android:layout_width="28dp"            android:layout_height="28dp"            android:layout_alignParentRight="true"            android:layout_marginRight="30dp"            android:layout_marginTop="12dp"            android:background="@drawable/btn_pause_selector"            />    </RelativeLayout></LinearLayout>