<?xml version="1.0" encoding="utf-8"?><RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:app="http://schemas.android.com/apk/res-auto"    android:layout_width="match_parent" android:layout_height="match_parent">    <RelativeLayout        android:id="@+id/sub_layout"        android:layout_width="match_parent"        android:layout_height="300dp">        <ImageButton            android:id="@+id/option_btn"            android:layout_width="20dp"            android:layout_height="20dp"            android:text="Button"            android:layout_marginRight="30dp"            android:layout_marginTop="30dp"            android:layout_alignParentRight="true"            android:layout_alignParentTop="true"            />        <TextView            android:id="@+id/walk_txt"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:text="TextView"            android:layout_above="@+id/dist_txt"            android:layout_alignStart="@+id/dist_txt" />        <TextView            android:id="@+id/petname_txt"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:text="몽이"            android:layout_alignBottom="@+id/pet_img"            android:layout_centerHorizontal="true" />        <TextView            android:id="@+id/adv_txt"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:gravity="center"            android:text="TextView"            android:layout_marginTop="30dp"            android:layout_alignParentTop="true"            android:layout_alignStart="@+id/walk_txt" />        <TextView            android:id="@+id/dist_txt"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:text="TextView"            android:layout_above="@+id/pet_img"            android:layout_centerHorizontal="true" />        <ImageView            android:id="@+id/pet_img"            android:layout_width="80dp"            android:layout_height="80dp"            app:srcCompat="@mipmap/ic_launcher"            android:layout_centerVertical="true"            android:layout_centerHorizontal="true" />    </RelativeLayout>    <Button        android:id="@+id/music_btn"        android:layout_width="fill_parent"        android:layout_height="150dp"        android:text="음악 들려주기"        android:layout_marginBottom="20dp"        android:layout_marginLeft="50px"        android:layout_marginRight="50px"        android:layout_above="@+id/walk_btn"        />    <Button        android:id="@+id/walk_btn"        android:layout_width="160dp"        android:layout_height="150dp"        android:layout_marginBottom="20dp"        android:layout_marginLeft="50px"        android:layout_marginRight="25px"        android:layout_above="@+id/music_cnt"        android:text="산책하기" />    <Button        android:id="@+id/record_btn"        android:layout_width="160dp"        android:layout_height="150dp"        android:layout_marginBottom="20dp"        android:layout_marginLeft="25px"        android:layout_marginRight="50px"        android:layout_above="@+id/music_cnt"        android:layout_toRightOf="@+id/walk_btn"        android:text="녹음하기" />    <RelativeLayout        android:id="@+id/music_cnt"        android:layout_width="fill_parent"        android:layout_height="50dp"        android:layout_alignParentBottom="true">        <TextView            android:id="@+id/musicname_txt"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:layout_marginTop="15dp"            android:layout_marginLeft="30dp"            android:layout_alignParentLeft="true"            android:text="노래제목이다" />        <ImageButton            android:id="@+id/onoff_btn"            android:layout_width="20dp"            android:layout_height="20dp"            android:layout_alignParentRight="true"            android:layout_marginRight="30dp"            android:layout_marginTop="15dp"            android:layout_marginBottom="15dp"            />    </RelativeLayout></RelativeLayout>